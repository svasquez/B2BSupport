extends layout
block scripts
  script(src='/javascripts/productCatView.js')
block content
 nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') #{title}
          small #{description}
        #navbar.navbar-collapse.collapse
          form.navbar-form.navbar-right
            .form-group
              input.form-control(type='text', placeholder='Email')
            .form-group
              input.form-control(type='password', placeholder='Password')
            button.btn.btn-success(type='submit') Sign in
        // /.navbar-collapse
    // Main jumbotron for a primary marketing message or call to action
 .jumbotron
      .container
        h1 #{title} 
          small #{description}
        p
          | This is a template for a simple marketing or informational website. It includes a large callout called a jumbotron and three supporting pieces of content. Use it as a starting point to create something more unique.
        p
          a.btn.btn-primary.btn-lg(href='http://getbootstrap.com/examples/jumbotron/#', role='button') Learn more »
 .container(ng-app="productCatApp")
      // Example row of columns
      .row(ng-controller="ProductCatController")
       form
        .form-group
          label Name of product:
          input(type='text',class="form-control")
        .form-group
          label Description of product:
          input(type='text', class="form-control")
        .form-group
          input.btn.btn-primary(type='submit', value='Add Product')
        .col-md-4(ng-repeat='p in products')
         div(style="width:360px ; height: 66px")
          h2 {{ p.name}}
         .list-group
           a.list-group-item(ng-repeat='c in p.products_categories', href="#") {{c.name}}
          button.btn.btn-info Add Category
        
      hr
      footer
        p © 2016 Company, Inc.